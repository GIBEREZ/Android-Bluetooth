<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/viewpager_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="设备名称:">
        </TextView>

        <TextView
            android:id="@+id/viewpager_protocol"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/viewpager_name"
            android:text="设备协议:">
        </TextView>

        <TextView
            android:id="@+id/viewpager_uuid"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/viewpager_protocol"
            android:text="设备地址:">
        </TextView>

        <TextView
            android:id="@+id/viewpager_zt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/viewpager_uuid"
            android:text="连接状态:">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/viewpager_zt"
            android:layout_toEndOf="@id/viewpager_zt"
            app:cardCornerRadius="6dp">
            <TextView
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#00C853"
                android:gravity="center"
                android:text="已连接">
            </TextView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>